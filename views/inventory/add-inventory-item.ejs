<h1 class="mt-3">Add New Inventory</h1>
<div class="flash-message"><%- messages() %></div>
  <div id="add-inventory-item-wrapper">
    <form action="/inv/add-inventory-item" method="POST" id="addInventoryItemForm" class="bg-light border p-3 add-classification">
      <div class="form-group">
        <label for="classification">Classification</label>
        <select class="form-control" id="classification" name="classification_name" required>
          <option value="" selected hidden>Choose a classification</option>
          <% classifications.forEach(classification => { %>
            <option value="<%= classification.classification_name %>"><%= classification.classification_name %></option>
          <% }) %>
        </select>
      </div>    
      <div class="form-group">
        <label for="make">Make</label>
        <input type="text" class="form-control" id="make" name="inv_make" required placeholder="Min of 3 Characters" pattern="[A-Za-z]{3,}" minlength="3" title="Please enter at least 3 alphabetic characters, starting with a capital letter" value="<%= typeof form_data !== 'undefined' ? form_data.inv_make : '' %>">
      </div>
      <div class="form-group">
        <label for="model">Model</label>
        <input type="text" class="form-control" id="model" name="inv_model" required placeholder="Min of 3 Characters" pattern="[A-Za-z]{3,}" minlength="3" title="Please enter at least 3 alphabetic characters, starting with a capital letter" value="<%= typeof form_data !== 'undefined' ? form_data.inv_model : '' %>">
      </div>    
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="inv_description" required><%= typeof form_data !== 'undefined' ? form_data.inv_description : '' %></textarea>
      </div>
      <div class="form-group">
        <label for="image">Image Path</label>
        <input type="text" class="form-control" id="image" name="inv_image" required value="<%= typeof form_data !== 'undefined' ? form_data.inv_image : '' %>">
      </div>
      <div class="form-group">
        <label for="thumbnail">Thumbnail Path</label>
        <input type="text" class="form-control" id="thumbnail" name="inv_thumbnail" required value="<%= typeof form_data !== 'undefined' ? form_data.inv_thumbnail : '' %>">
      </div>    
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" name="inv_price" required placeholder="Decimal or Integer" step="0.01" min="0" title="Please enter a valid price" value="<%= typeof form_data !== 'undefined' ? form_data.inv_price : '' %>">
      </div>
      <div class="form-group">
        <label for="year">Year</label>
        <input type="text" class="form-control" id="year" name="inv_year" required placeholder="4-digit year" pattern="\d{4}" title="Please enter a 4-digit year" value="<%= typeof form_data !== 'undefined' ? form_data.inv_year : '' %>">
      </div>
      <div class="form-group">
        <label for="miles">Miles</label>
        <input type="text" class="form-control" id="miles" name="inv_miles" required placeholder="Digits Only" pattern="\d+" title="Please enter digits only" value="<%= typeof form_data !== 'undefined' ? form_data.inv_miles : '' %>">
      </div>
      <div class="form-group">
        <label for="color">Color</label>
        <input type="text" class="form-control" id="color" name="inv_color" required placeholder="Begin with uppercase" pattern="[A-Z][a-zA-Z]*" value="<%= typeof form_data !== 'undefined' ? form_data.inv_color : '' %>">
      </div>
      <button type="submit" class="btn btn-primary">Add Inventory</button>
      <div class="col-sm-12 pt-3 text-left"> 
        <a href="/inv/">Back to Inventory Management</a>
      </div>
  </form>
</div>